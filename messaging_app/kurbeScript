#!/bin/bash
# kurbeScript - Script to start and verify a local Kubernetes cluster using Minikube

# Exit immediately if a command exits with a non-zero status
set -e

echo "ğŸ” Checking if Minikube is installed..."
if ! command -v minikube &> /dev/null
then
    echo "âŒ Minikube is not installed. Please install it first."
    echo "ğŸ‘‰ Visit: https://minikube.sigs.k8s.io/docs/start/"
    exit 1
else
    echo "âœ… Minikube is installed."
fi

echo "ğŸš€ Starting Minikube cluster..."
minikube start

echo "â³ Verifying that the Kubernetes cluster is running..."
kubectl cluster-info

echo "ğŸ“¦ Retrieving available pods..."
kubectl get pods -A

echo "âœ… Kubernetes cluster setup and verification complete!"

